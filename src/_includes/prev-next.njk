{% if page.collection %}
  {% set collection = collections[page.collection] %}
  {% if collection %}
    {% set prev = collection | getPreviousCollectionItem(page) %}
    {% set next = collection | getNextCollectionItem(page) %}

    {% if prev or next %}
    <nav class="prev-next-nav" style="margin: 3rem 0; display: flex; justify-content: space-between;">
      <div>
        {% if prev %}
          <a href="{{ prev.url }}">&larr; {{ prev.data.title }}</a>
        {% endif %}
      </div>
      <div>
        {% if next %}
          <a href="{{ next.url }}">{{ next.data.title }} &rarr;</a>
        {% endif %}
      </div>
    </nav>
    {% endif %}
  {% endif %}
{% endif %}
