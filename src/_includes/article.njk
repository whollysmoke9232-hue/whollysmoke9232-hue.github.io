---
layout: layout.njk
---

<header class="article-header">
  <h1>{{ title }}</h1>

  {% if excerpt %}
    <p><em>{{ excerpt }}</em></p>
  {% endif %}

  {% if author %}
    <p><strong>By {{ author }}</strong></p>
  {% endif %}

  {% if date %}
    <p>
      <time datetime="{{ date }}">
        {{ date | readableDate }}
      </time>
    </p>
  {% endif %}
</header>

<article class="article-content">
  {{ content | safe }}
</article>

{% if bookParent %}
  <div class="book-return-link">
    <a href="/books/fractured-light/">
      Read the full book: <strong><em>Fractured Light</em></strong>
    </a>
  </div>
{% endif %}

<hr class="article-contact-divider">

<p class="article-scripture-note">
  All Scripture quotations are from the New American Standard Bible (NASB), unless otherwise noted.
</p>

<p class="article-contact-note">
  I’d love to hear your thoughts — <a href="mailto:marginsdevotionals@gmail.com" class="article-contact-link">write me</a>. I read every message.
</p>

<!-- Reading Path Navigation Mount -->
<div data-reading-path-nav></div>

{% include "reading-path-nav.njk" %}

<p class="print-link-wrap">
  <a class="print-link" href="#" onclick="window.print(); return false;">Print / Save as PDF</a>
</p>

<style>
  .article-contact-divider {
    margin: 2rem 0 1rem 0;
    opacity: 0.35;
  }

  .article-contact-note {
    font-size: 0.9rem;
    font-weight: 300;
    opacity: 0.8;
  }

  .article-contact-link {
    text-decoration: underline;
  }

  .article-scripture-note {
    margin-top: 0.6rem;
    font-size: 0.85rem;
    font-weight: 300;
    opacity: 0.75;
  }

  .book-return-link {
    margin: 2rem 0 1rem 0;
    text-align: left;
  }

  .book-return-link a {
    text-decoration: underline;
    color: #5a3e2b;
  }

  .article-scriptures {
    margin-top: 2rem;
    font-size: 0.95rem;
  }

  .article-scriptures ul {
    margin-top: 0.5rem;
    padding-left: 1.2rem;
  }

  .article-scriptures a {
    text-decoration: underline;
  }

  .article-tags {
    margin-top: 2rem;
  }

  .tag-pill {
    display: inline-block;
    margin: 0 0.8rem 0.8rem 0;
    padding: 0.45rem 0.9rem;
    font-size: 0.95rem;
    text-decoration: none;
    border-radius: 6px;
    background-color: #f1e8dc;
    color: #5a3e2b;
    border: 1px solid #d8c8b3;
  }

  .tag-pill:hover {
    background-color: #e6d9c7;
  }
</style>

<script>
  (function () {
    function hideTagsIfReadingPathActive() {
      const navContainer = document.querySelector('[data-reading-path-nav]');
      const tags = document.getElementById('article-tags');

      if (!navContainer || !tags) return;

      if (navContainer.innerHTML.trim().length > 0) {
        tags.style.display = 'none';
      }
    }

    window.addEventListener('load', hideTagsIfReadingPathActive);
  })();
</script>
