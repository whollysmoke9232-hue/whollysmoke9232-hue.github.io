---
pagination:
  data: collections.tagList
  size: 1
  alias: tag
permalink: /tags/{{ tag | slug }}/index.html
layout: layout.njk
---

<h2>Devotionals tagged with "{{ tag }}"</h2>

<ul>
  {% for post in collections.all | filterByTag(tag) %}
    <li>
      <a href="{{ post.url }}">{{ post.data.title }}</a>
      <span> â€” {{ post.date | readableDate }}</span>
    </li>
  {% endfor %}
</ul>