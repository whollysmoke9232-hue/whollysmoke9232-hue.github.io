---
layout: layout.njk
---

<h1>{{ title }}</h1>

{% if description %}
<p class="page-intro">{{ description }}</p>
{% endif %}

<style>
  .content-list {
    list-style: none;
    padding: 0;
  }

  .category-item {
    margin-bottom: 2rem;
    color: #5a3e2b;
  }

  .category-title {
    font-weight: 700;
    font-size: 1.2rem;
    text-decoration: none;
    color: #5a3e2b;
  }

  .category-title:hover {
    text-decoration: underline;
  }

  .category-date {
    margin: 0.3rem 0 0.5rem 0;
    font-size: 0.95rem;
    color: #5a3e2b;
  }

  .category-excerpt {
    font-size: 1.2rem;
    margin: 0;
    line-height: 1.6;
    color: #5a3e2b;
  }
</style>

<ul class="content-list">
  {% for item in collections[category] | sort(attribute="data.date") | reverse %}
    <li class="category-item">

      <a href="{{ item.url }}" class="category-title">
        {{ item.data.title }}
      </a>

      {% if item.data.date %}
        <div class="category-date">
          {{ item.data.date | readableDate }}
        </div>
      {% endif %}

      {% if item.data.excerpt %}
        <p class="category-excerpt">
          {{ item.data.excerpt | safe }}
        </p>
      {% endif %}

    </li>
  {% endfor %}
</ul>
