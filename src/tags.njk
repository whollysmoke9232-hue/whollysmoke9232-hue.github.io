---
pagination:
  data: collections.tagList
  size: 1
  alias: tag
permalink: /tags/{{ tag | slug }}/index.html
layout: layout.njk
eleventyExcludeFromCollections: true
---

{% if (tag | slug) == "confinement" %}
  <h1>Written in Confinement</h1>
{% else %}
  <h1>Tagged with "{{ tag }}"</h1>
{% endif %}


<ul>
  {% for post in collections.all %}
    {% if post.data.tags and post.data.tags.length > 0 %}
      {% for postTag in post.data.tags %}
        {% if (postTag | slug) == (tag | slug) %}
          <li>
            <a href="{{ post.url }}">{{ post.data.title }}</a>
            {% if post.data.excerpt %}
              <p style="margin: 0.5rem 0 0 0; color: #666; font-size: 0.9rem;">{{ post.data.excerpt }}</p>
            {% endif %}
          </li>
        {% endif %}
      {% endfor %}
    {% endif %}
  {% endfor %}
</ul>

<nav class="explore-bubbles" aria-label="Return" style="margin-top: 2rem;">
  <a href="/tags/">‚Üê View All Tags</a>
</nav>
