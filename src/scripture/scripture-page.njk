---
pagination:
  data: collections.scriptureList
  size: 1
  alias: scripture
permalink: /scripture/{{ scripture | slugify }}/index.html
layout: layout.njk
eleventyExcludeFromCollections: true
---

<style>
  .scripture-header {
    background: #f9f9f9;
    padding: 1.5rem;
    border-left: 4px solid #8b7355;
    margin-bottom: 2rem;
  }

  .scripture-header h1 {
    margin: 0 0 0.5rem 0;
    color: #8b7355;
  }

  .scripture-subtext {
    color: #666;
    font-size: 0.95rem;
  }

  .posts-list {
    list-style: none;
    padding: 0;
  }

  .posts-list li {
    margin-bottom: 1.5rem;
    padding-bottom: 1.5rem;
    border-bottom: 1px solid #eee;
  }

  .posts-list li:last-child {
    border-bottom: none;
  }

  .posts-list a {
    text-decoration: none;
    color: #333;
    font-size: 1.2rem;
    font-weight: 500;
  }

  .posts-list a:hover {
    color: #8b7355;
  }

  .post-excerpt {
    margin: 0.5rem 0 0 0;
    color: #666;
    font-size: 0.95rem;
    line-height: 1.6;
  }

  .post-meta {
    margin-top: 0.5rem;
    color: #999;
    font-size: 0.85rem;
  }
</style>

<div class="scripture-header">
  <h1>{{ scripture }}</h1>
  <p class="scripture-subtext">All writings that reference this passage</p>
</div>

<ul class="posts-list">
  {% for post in collections.all %}
    {% if post.data.scripture and post.data.scripture.length > 0 %}
      {% for ref in post.data.scripture %}
        {% if ref == scripture %}
          <li>
            <a href="{{ post.url }}">{{ post.data.title }}</a>
            {% if post.data.excerpt %}
              <p class="post-excerpt">{{ post.data.excerpt }}</p>
            {% endif %}
            {% if post.data.date %}
              <div class="post-meta">{{ post.data.date | readableDate }}</div>
            {% endif %}
          </li>
        {% endif %}
      {% endfor %}
    {% endif %}
  {% endfor %}
</ul>

<nav class="explore-bubbles" aria-label="Return" style="margin-top: 2rem;">
  <a href="/scripture/">‚Üê View All Scriptures</a>
</nav>
